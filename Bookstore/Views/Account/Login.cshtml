@{
    Layout = null;
}

@model LoginModel

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bookstore Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

</head>

<body>

    <div class="bg=dark text-white p-2">
        <span class="navbar-brand m-1-2">BOOK STORE</span>
    </div>

    <div class="m-1 p-1">

        <div class="text-danger" asp-validation-summary="All"></div>

        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group">
                @*Added <code> elements*@
                <p>If you want to get into the admin site, you should <code>login</code> by filling <code>Username</code> and <code>Password</code> out.</p>
                <label asp-for="Username">Username: </label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" type="password" />
                @*Added Contextual Colors to the text*@
                <p class="text-danger">Hint: Mission 11 Assignment </p>
            </div>

            <button class="btn btn-primary" type="submit">Log In</button>

            <input type="hidden" asp-for="ReturnUrl" />

        </form>
    </div>
</body>
</html>